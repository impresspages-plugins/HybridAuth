{
    "title": "HybridAuth",
    "version": "1.11",
    "name": "HybridAuth",
    "description": "Social login using HybridAuth library. Important: install ImpressPages User plugin before using this plugin.",
    "author": "ImpressPages",
    "options": [
        {
            "label": "Merge accounts",
            "name": "mergeAccounts",
            "type": "checkbox",
            "default": false,
            "note": "If checked, plugin will merge authenticated user with the same email to existing ImpressPages user. Otherwise, error will be thrown that user with such email already exists."
        },
        {
            "label": "Google Client ID",
            "name": "googleId",
            "type": "text",
            "default": ""
        },
        {
            "label": "Google Client secret:",
            "name": "googleSecret",
            "type": "text",
            "default": ""
        },
        {
            "label": "Facebook APP ID",
            "name": "facebookId",
            "type": "text",
            "default": ""
        },
        {
            "label": "Facebook APP secret:",
            "name": "facebookSecret",
            "type": "text",
            "default": ""
        },
        {
            "label": "Github client ID:",
            "name": "githubId",
            "type": "text",
            "default": ""
        },
        {
            "label": "Github client secret:",
            "name": "githubSecret",
            "type": "text",
            "default": ""
        }
    ]
}
